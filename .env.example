# Server Configuration
PORT=3000

# Comma-separated list of allowed redirect hostnames
# This prevents open-redirect vulnerabilities
ALLOWED_HOSTS=wa.me,api.whatsapp.com,web.whatsapp.com,flow.example.com

# Rate limiting (requests per minute per IP)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Logging level (trace, debug, info, warn, error, fatal)
LOG_LEVEL=info

# Node environment
NODE_ENV=production
