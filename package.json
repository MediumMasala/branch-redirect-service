  "keywords": [
    "url-shortener",
    "redirect",
    "branch",
    "whatsapp",
    "deep-link"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/rate-limit": "^9.1.0",
    "fastify": "^4.28.1",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "ua-parser-js": "^1.0.38",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@types/ua-parser-js": "^0.7.39",
    "@vercel/node": "^5.5.15",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "vitest": "^2.0.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
